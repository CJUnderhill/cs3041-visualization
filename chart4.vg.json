{
    "title": {
        "text": "Worth of Top-Ranked Billionaires",
        "fontSize": 24
    },
    "width": 750,
    "height": 750,
    "data": {
        "url": "https://raw.githubusercontent.com/CJUnderhill/cs3041-visualization/master/data/billionaires.csv"
    },
    "transform": [
        {
            "filter": "datum.rank > 0"
        },
        {
            "filter": "datum.rank < 201"
        },
        {
            "filter": "datum.year == 2014"
        }
    ],
    "layer": [
        {
            "mark": "area",
            "encoding": {
                "x": {
                    "title": {
                        "text": "Rank of Individual's Wealth (Compared to Other Billionaires)",
                        "fontSize": 16
                    },
                    "field": "rank",
                    "type": "quantitative"
                },
                "y": {
                    "title": {
                        "text": "Wealth of Individual (Billion USD)",
                        "fontSize": 16
                    },
                    "field": "worth in billions",
                    "type": "quantitative"
                }
            }
        }
    ]
}