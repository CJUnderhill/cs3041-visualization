{
    "title": {
        "text": "Total Worth of Billionaires by Region",
        "fontSize": 24
    },
    "width": 1000,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/CJUnderhill/cs3041-visualization/master/data/billionaires.csv"
    },
    "transform": [
        {
            "filter": "datum.age > 0"
        },
        {
            "filter": "datum.rank > 0"
        },
        {
            "filter": "datum.year == 2014"
        }
    ],
    "mark": {
        "type": "circle",
        "size": 30
    },
    "encoding": {
        "x": {
            "axis": {
                "title": "Rank of Individual's Wealth (Compared to Other Billionaires)",
                "titleFontSize": 16
            },
            "field": "rank",
            "type": "quantitative"
        },
        "y": {
            "axis": {
                "title": "Age of Individual",
                "titleFontSize": 16
            },
            "field": "age",
            "type": "quantitative",
            "scale": {
                "domain": [
                    20,
                    100
                ]
            }
        },
        "color": {
            "axis": {
                "title": "Type of Wealth",
                "titleFontSize": 16
            },
            "field": "type",
            "type": "ordinal",
            "scale": {
                "scheme": "set1"
            }
        }
    }
}