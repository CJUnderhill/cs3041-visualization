{
    "title": {
        "text": "Total Worth of Billionaires by Region",
        "fontSize": 24
    },
    "width": 1000,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/CJUnderhill/cs3041-visualization/master/data/billionaires.csv"
    },
    "transform": [
        {
            "filter": "datum.age > 0"
        },
        {
            "filter": "datum.rank > 0"
        },
        {
            "filter": "datum.year == 2014"
        }
    ],
    "layer": [
        {
            "mark": "point",
            "encoding": {
                "x": {
                    "title": "Rank of Individual's Wealth (Among Billionaires)",
                    "field": "rank",
                    "type": "quantitative"
                },
                "y": {
                    "title": "Age of Individual",
                    "field": "age",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            20,
                            100
                        ]
                    }
                }
            }
        }, 
        {
            "mark": "line",
            "encoding": {
                "x": {
                    "field": "rank",
                    "type": "quantitative"
                },
                "y": {
                    "aggregate": "mean",
                    "field": "age",
                    "type": "quantitative",
                    "scale": {
                        "domain": [
                            20,
                            100
                        ]
                    }
                }
            }
        }
    ]
}