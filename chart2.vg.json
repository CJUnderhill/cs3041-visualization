{
    "title": {
        "text": "Total Worth of Billionaires by Region",
        "fontSize": 24
    },
    "width": 500,
    "height": 500,
    "data": {
        "url": "https://raw.githubusercontent.com/CJUnderhill/cs3041-visualization/master/data/billionaires.csv"
    },
    "transform": [
        {
            "filter": "datum.year == 2014"
        },
        {
            "filter": "datum.type != ''"
        }
    ],
    "layer": [
        {
            "mark": {
                "type": "bar"
            },
            "encoding": {
                "x": {
                    "title": "Region of Residence",
                    "titleFontSize": 16,
                    "field": "region",
                    "type": "nominal"
                },
                "y": {
                    "title": "Total Worth of Billionaire (Billion USD)",
                    "titleFontSize": 16,
                    "aggregate": "sum",
                    "field": "worth in billions",
                    "type": "quantitative"
                },
                "color": {
                    "title": "Type of Wealth",
                    "titleFontSize": 16,
                    "field": "type",
                    "type": "ordinal",
                    "scale": {
                        "scheme": "set1"
                    }
                }
            }
        }
    ]
}